{
  "name": "Reminder",
  "description": "Reminds you before you close firefox",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/icon.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "contextMenus",
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["scripts/browser-polyfill.js", "scripts/contextMenu.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "pomodoro-timer@extension.local",
      "strict_min_version": "109.0"
    }
  },
  "web_accessible_resources": ["break/break.html"]
}